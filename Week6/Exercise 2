#!/usr/bin/env python
# coding: utf-8

# In[ ]:


# Exercise 2: Student Grade Analyzer

NUM_STUDENTS = 6

def _clean_name(s: str) -> str:
    s = " ".join(s.strip().split())
    return s.title()

def _prompt_score(prompt: str) -> int:
    while True:
        raw = input(prompt).strip()
        try:
            score = int(raw)
            if 0 <= score <= 100:
                return score
            print("Score must be between 0 and 100.")
        except ValueError:
            print("Please enter a whole number (e.g., 85).")

def _median(nums: list[int]) -> float:
    if not nums:
        return 0.0
    nums_sorted = sorted(nums)
    n = len(nums_sorted)
    mid = n // 2
    if n % 2 == 1:
        return float(nums_sorted[mid])
    return (nums_sorted[mid - 1] + nums_sorted[mid]) / 2.0

def _letter_grade(score: int) -> str:
  
    if score >= 90: return "A"
    if score >= 80: return "B"
    if score >= 70: return "C"
    if score >= 60: return "D"
    return "F"

print("=== STUDENT GRADE ANALYZER ===")

student_records = []  
stats = {}            
unique_scores = set()

# Collecting data
for i in range(1, NUM_STUDENTS + 1):
    name = _clean_name(input(f"Enter student {i} name: "))
    while not name:
        name = _clean_name(input("Name cannot be empty. Enter again: "))

    score = _prompt_score(f"Enter {name}'s score (0-100): ")
    student_records.append((name, score))

# Extracting scores
scores = [score for _, score in student_records]

# Part B stats
stats["highest"] = max(scores)
stats["lowest"] = min(scores)
stats["average"] = sum(scores) / len(scores) if scores else 0.0

# (extension) median
stats["median"] = _median(scores)

# Part C unique scores
unique_scores = set(scores)

# Part D grade distribution
grade_distribution = {}
for s in scores:
    grade_distribution[s] = grade_distribution.get(s, 0) + 1

# (extension) letter grade distribution + above/below average
letter_distribution = {}
above_avg = []
below_avg = []
avg = stats["average"]

for name, score in student_records:
    lg = _letter_grade(score)
    letter_distribution[lg] = letter_distribution.get(lg, 0) + 1
    if score >= avg:
        above_avg.append(name)
    else:
        below_avg.append(name)

# Output
print("\n=== STUDENT RECORDS ===")
for i, (name, score) in enumerate(student_records, start=1):
    print(f"{i}. {name}: {score}")

print("\n=== CLASS STATISTICS ===")
print(f"Highest Score: {stats['highest']}")
print(f"Lowest Score: {stats['lowest']}")
print(f"Average Score: {stats['average']:.2f}")
print(f"Median Score: {stats['median']:.2f}")

print("\n=== UNIQUE SCORES ===")
print(unique_scores)
print(f"Total unique scores: {len(unique_scores)}")

print("\n=== GRADE DISTRIBUTION ===")
for score in sorted(grade_distribution):
    print(f"Score {score}: {grade_distribution[score]} students")

print("\n=== LETTER GRADE DISTRIBUTION (Extension) ===")
for lg in ["A", "B", "C", "D", "F"]:
    if lg in letter_distribution:
        print(f"{lg}: {letter_distribution[lg]} students")

print("\n=== ABOVE / BELOW AVERAGE (Extension) ===")
print("Above or equal to average:", ", ".join(sorted(above_avg)) if above_avg else "None")
print("Below average:", ", ".join(sorted(below_avg)) if below_avg else "None")


# In[ ]:




